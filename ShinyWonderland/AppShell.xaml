<?xml version="1.0" encoding="utf-8"?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:ShinyWonderland"
       x:Class="ShinyWonderland.AppShell"
       x:DataType="local:AppShell">
    
    <TabBar>
        <Tab Title="Ride Time" Icon="ride_time">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Settings" Icon="settings">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
        <Tab Title="Parking" Icon="parking">
            <ShellContent ContentTemplate="{DataTemplate local:ParkingPage}" />
        </Tab>
        <Tab Title="Hours" Icon="hours">
            <ShellContent ContentTemplate="{DataTemplate local:HoursPage}" />
        </Tab>
    </TabBar>
</Shell>