<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shinyWonderland="clr-namespace:ShinyWonderland"
             x:DataType="shinyWonderland:HoursViewModel"
             x:Class="ShinyWonderland.HoursPage"
             Title="Hours of Operation">
    
    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding Schedule}">
            <CollectionView.EmptyView>
                <Label Text="No Upcoming Schedule Found" />
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="shinyWonderland:ParkSchedule">
                    <VerticalStackLayout>
                        <Label Text="{Binding DateString}" />
                        <Label Text="{Binding OpeningTime, StringFormat='{0:h:mm tt}'}" />
                        <Label Text="{Binding ClosingTime, StringFormat='{0:h:mm tt}'}" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>